@model ItBlog.Models.AddArticleViewModel

<div class="form-add_article">
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Post" class="article-add">
        <h2 class="head-text">Create article</h2>
        <div class="item_formadd">
            <label > Name </label>
            <input id="Name" name="Name" type="text" required class="form_input" />
        </div>
        <div class="item_formadd">
            <label>Short Description</label>
            @Html.TextBoxFor(m => m.ShortDescription)
        </div>
        <div class="item_formadd">
            <label>Full Description</label>
            <input id="FullDescription" name="FullDescription" type="text" required class="form_input" />
        </div>
        <div class="item_formadd">
            <label>Tags(Separate with ' ')</label>
                @Html.TextBoxFor(m => m.Tags)
          
        </div>
        <div class=" item_result">
            <div class="item_formadd">

               <input id="Photo" name="Photo" type="File" accept=".png,.jpg,.jpeg" class="input_file">
            </div>
            <div>
                <label>Category</label>
                <select id="Category" name="Category">
                    @foreach (var i in Model.CategoryList)
                    { <option>@i.CategoryName</option>}
                </select>
            </div>
            <input type="submit" value="Create" />
        </div>
    </form>
</div>